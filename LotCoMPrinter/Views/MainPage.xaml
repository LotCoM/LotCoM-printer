<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LotCoMPrinter.Views.MainPage">

    <!-- Main Layout Grid -->
    <Grid
        Margin="20"
        Padding="5">
        <Grid.RowDefinitions>
            <!-- Single Row to Hold StackLayouts in each Column -->
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <!-- Left-Side Column (main set of input elements) -->
            <ColumnDefinition Width="*"/>
            <!-- Right-Side Column (Date/shift input elements) -->
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <!-- Left-Side StackLayout (Stack of Input Elements) -->
        <StackLayout
            Grid.Row="0"
            Grid.Column="0"
            Margin="20"
            Padding="5">
            <!-- Process Picker -->
            <Picker
                Title="Process"
                WidthRequest="200"
                HeightRequest="50"/>
            <!-- JBK Number Label and Input -->
            <Label/>
            <Entry/>
            <!-- Lot Number Label and Input -->
            <Label/>
            <Entry/>
            <!-- Deburr JBK Number Label and Input -->
            <Label/>
            <Entry/>
            <!-- Die Number Label and Input -->
            <Label/>
            <Entry/>
            <!-- Part Number Picker -->
            <Label/>
            <Entry/>
            <!-- Part Name Label and Input -->
            <Label/>
            <Entry/>
            <!-- Model Number Picker -->
            <Label/>
            <Entry/>
            <!-- Quantity Label and Input -->
            <Label/>
            <Entry/>
        </StackLayout>
        <!-- Right-Side StackLayout (Production Time Inputs) -->
        <StackLayout
            Grid.Row="0"
            Grid.Column="1"
            Margin="20"
            Padding="5">
            <!-- Production Date Label and DatePicker -->
            <Label/>
            <DatePicker/>
            <!-- Production Shift Picker -->
            <Picker/>
        </StackLayout>
    </Grid>
</ContentPage>
